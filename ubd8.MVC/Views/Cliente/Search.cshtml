@model IEnumerable<upd8.MVC.ViewModels.ClienteViewModel>

<h1>"Lista de Clientes"</h1>

@*<partial name="_BuscaCliente"/>*@

<p supress-by-claim-name="Categoria" supress-by-claim-value="Adicionar">
    <a class="btn btn-info" asp-action="Create">Novo Cliente</a>
</p>

<p>
    Pesquisar:
    @using(@Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        @Html.TextBox("Pesquisa")
        <input type="submit" value="Pesquisar" />
    }
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.Display("E")
            </th> 
            <th>
                @Html.Display("D")
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>  
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {   
            <tr> 
                <td class="text-right">
                    <a class="btn btn-warning" asp-controller="Cliente" supress-by-claim-name="Cliente" supress-by-claim-value="Editar" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt">Editar</spam></a>
                </td>
                <td class="text-right">                   
                    <a class="btn btn-danger" asp-controller="Cliente" supress-by-claim-name="Cliente" supress-by-claim-value="Excluir"  asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash">Excluir</spam></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>                
            </tr>
        }
    </tbody>
</table>
